{
  "name": "pdf2foundry-build",
  "private": true,
  "version": "0.1.0",
  "description": "Build tooling for pdf2foundry: FoundryVTT CLI for pack compilation",
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@foundryvtt/foundryvtt-cli": "^3.0.0"
  },
  "scripts": {
    "compile:pack": "npx @foundryvtt/foundryvtt-cli compilePack --input dist/$npm_config_modid/sources/journals --output dist/$npm_config_modid/packs/$npm_config_packname",
    "compile:debug": "node scripts/compile-pack-debug.js --module dist/$npm_config_modid --pack $npm_config_packname"
  }
}
